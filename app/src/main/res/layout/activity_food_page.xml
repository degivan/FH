<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:screenOrientation="portrait"
    tools:context="spbau.mit.divan.foodhunter.activities.FoodPage">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Pizza peperoni"
        android:id="@+id/foodNameText"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="550 Ñ€."
        android:id="@+id/priceText"
        android:layout_alignTop="@+id/foodPlaceNameText"
        android:layout_alignRight="@+id/foodRateButton"
        android:layout_alignEnd="@+id/foodRateButton" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/foodRatingBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/foodOpenHoursText"
        android:numStars="5" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="rate"
        android:id="@+id/foodRateButton"
        android:layout_alignTop="@+id/foodRatingBar"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:enabled="true"
        android:clickable="true"
        android:onClick="onFoodRateClick" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Pizza Hut"
        android:id="@+id/foodPlaceNameText"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/foodNameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Classic but delicious pizza with peperroni. Be careful,  it&apos;s really spicy."
        android:id="@+id/foodDescriptionText"
        android:layout_below="@+id/foodRatingBar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="41dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Grajdanskiy, 130"
        android:id="@+id/foodAddressText"
        android:layout_below="@+id/foodPlaceNameText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_toLeftOf="@+id/priceText"
        android:layout_toStartOf="@+id/priceText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="8.00-23.00"
        android:id="@+id/foodOpenHoursText"
        android:layout_below="@+id/foodAddressText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/foodAddressText"
        android:layout_alignEnd="@+id/foodAddressText" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Place Page"
        android:id="@+id/placePageButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/foodDescriptionText"
        android:layout_alignEnd="@+id/foodDescriptionText"
        android:onClick="onPlacePageButtonClick" />

</RelativeLayout>
